
<title>Add Profile</title>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title"></div>
        </div>
        <form asp-controller="User" asp-action="EditProfile" method="post">
            <div class="card-body">
                <div class="form-group">
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="text" class="form-control input-full" id="FUserName" name="FUserName" placeholder="Username" required />
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="text" class="form-control input-full" id="FName" name="FName" placeholder="Name" required />
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="text" class="form-control input-full" id="FSurname" name="FSurname" placeholder="Surname" required />
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="email" class="form-control input-full" id="FEmail" name="FEmail" placeholder="E-mail" required />
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="password" class="form-control input-full" id="FPassword" name="FPassword" placeholder="Password" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>

