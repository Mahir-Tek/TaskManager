<title>Update Mission</title>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title"></div>
        </div>
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="text" class="form-control input-full" id="FMissionName" name="FMissionName" placeholder="Mission Name" />
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="text" class="form-control input-full" id="FMissionTitle" name="FMissionTitle" placeholder="Mission Title" />
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-12 p-0">
                            <input type="date" class="form-control input-full" id="FMissionDateTime" name="FMissionDateTime" placeholder="Mission Date" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>
